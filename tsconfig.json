{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@/*": ["./src/*"],
      "@modules/*": ["./src/modules/*"],
      "@common/*": ["./src/common/*"],
      "@auth/*": ["./src/modules/auth/*"],
      "@ai/*": ["./src/ai/*"],
      "@config/*": ["./src/config/*"],
      "@database/*": ["./src/database/*"],
      "@scripts/*": ["./src/modules/scripts/*"],
      "@users/*": ["./src/modules/users/*"],
      "@images/*": ["./src/modules/images/*"],
      "@videos/*": ["./src/modules/videos/*"],
      "@audios/*": ["./src/modules/audios/*"],
      "@flow/*": ["./src/modules/flow/*"],
      "@publisher/*": ["./src/modules/publisher/*"]
    }
  }
}
